{
  "name": "ralph",
  "version": "1.0.0",
  "description": "Claude Code in a loop with fresh context per iteration",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "ralph": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "biome check src/",
    "lint:fix": "biome check --write src/",
    "format": "biome format --write src/",
    "format:check": "biome format src/",
    "prepublishOnly": "npm run build",
    "prepare": "simple-git-hooks"
  },
  "simple-git-hooks": {
    "pre-commit": "npx biome check --staged --no-errors-on-unmatched"
  },
  "keywords": [
    "claude",
    "claude-code",
    "ai",
    "automation",
    "cli"
  ],
  "author": "Jonas Jensen <jonas.jensen@msn.com>",
  "license": "MIT",
  "dependencies": {
    "chalk": "5.6.2",
    "commander": "14.0.2",
    "execa": "9.6.1"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@types/node": "24.10.8",
    "simple-git-hooks": "2.13.1",
    "typescript": "5.9.3"
  },
  "engines": {
    "node": ">=24.0.0"
  }
}
